<!DOCTYPE html>

{% block title %}SousTheme index{% endblock %}

{% block body %}
<div class="w-75 m-auto mt-5">
    <h1>SousTheme</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ID_soustheme</th>
                <th>Nom</th>
                <th>Id_theme_parent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sous_theme in sous_themes %}
            <tr>
                <td>{{ sous_theme.nom }}</td>
                <td>
                    <a href="{{ path('app_sous_theme_show', {'id': sous_theme.id}) }}">show</a>
                    <a href="{{ path('app_sous_theme_edit', {'id': sous_theme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sous_theme_new') }}">Create new</a>
</div>   
{% endblock %}
